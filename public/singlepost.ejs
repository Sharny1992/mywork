<!DOCTYPE html>
<html>
<%- include('./head')%>

  <body>
    <%- include('./nav') %>

      <div class="container text-center">
        <div class="row">
          <div class="col-8">
            <div class="row">
              <div class="row" id="postid" postid="<%= post.id %>">

                <h3 class="col-1 content-left">
                  <%= post.titlenews %>
                </h3>
              </div>
              <p class="content-justify">
                <%= post.content %>
              </p>
              <p class="content-justify">
                published by <a href="/profile/<%= user.id %>">
                  <%= user.username %>
                </a>
              </p>
            </div>
            <div class="row">
              <div id="liveAlertPlaceholder"></div>
              <%if(!isLogin){ %>
                <label for="inputPassword5" class="form-label">Email</label>
                <input type="text" ; id="email">
                <%}%>
                  <label for="inputPassword5" class="form-label">Comment</label>
                  <textarea class="form-control" id="comment" rows="3"></textarea>
                  <div class="col-1">
                    <button style="float: right" type="button" id="create" class=" btn btn-success">Create</button>
                  </div>
                  
            </div>

            <div class="row">
              <% for(let i=0;i < comments.length; i++){%>
                <h6 class="col-1 content-left">
                  <p>From: <%= comments[i].email %>
                  </p>
                </h6>

                <p class="content-justify">
                  Text:
                  <%= comments[i].comment %>
                </p>
                <%}%>
            </div>
            
          </div>
          <div class="col-4">col-4</div>
        </div>
      </div>
      <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="toast-header">

            <strong class="me-auto">Notify</strong>
            <small>11 mins ago</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            comment added reload the page.
            <a href="/posts/<%= post.id %>">refresh</a>
          </div>
        </div>
      </div>
      <script>
        let id = document.querySelector('#postid')
        let create = document.querySelector('#create')
        let inpemail = document.querySelector('#email')
        let inpcomment = document.querySelector('#comment')
        const alertPlaceholder = document.getElementById('liveAlertPlaceholder')

        const alert = (message, type) => {
          const wrapper = document.createElement('div')
          wrapper.innerHTML = [
            `<div class="alert alert-${type} alert-dismissible" role="alert">`,
            `   <div>${message}</div>`,
            '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
            '</div>'
          ].join('')

          alertPlaceholder.append(wrapper)
        }
        create.onclick = function () {
          axios.post('/comments', {
            newsid: id.getAttribute('postid'),
            email: inpemail?.value,
            comment: inpcomment.value
          })
            .then((response) => {

              console.log(response.data)
              let toastlive = document.querySelector('#liveToast')

              const toast = new bootstrap.Toast(toastlive)

              toast.show()

            })
            .catch(function (error) {
              alert(error.response.data.message, 'danger')
            });
        }

      </script>
  </body>

</html>