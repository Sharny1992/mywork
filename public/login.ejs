<!DOCTYPE html>
<html>
  <%- include('./head')%>
  <body>
   
    <%- include('./nav') %>
    <div class="container text-center">
      <div class="row">
        <div class="col-8">
            <div class="mb-3">
              <label for="email" class="float-start" class="form-label">Email: </label>
              <input type="text" style="width:400px; height:30px"  class="form-control" id="email">
            </div>
          <div class="mb-3">
            <label for="pass"  class="float-start">Password: </label>
            <input type="password" style="width:400px; height:30px"  class="form-control" id="pass">
          </div>
          
          <button type="button" id="enter" class="float-start btn btn-success">Enter</button>
        </div>
        <div class="col-4">col-4</div>
        
      </div>
    </div>
    <script>
      
      let create = document.querySelector('#enter')
      let inptemail = document.querySelector('#email')
      let inptpass = document.querySelector('#pass')
      create.onclick = function(){
        axios.post('/login',{
          email: inptemail.value,
          password: inptpass.value
        })
        .then((response)=>{
          window.location.href=window.location.origin;
          console.log(response.data)
        })
      }
    </script>
    
  </body>
</html>