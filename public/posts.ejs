<% for(let i =0;i < posts.length; i++){%>
  <div class="row">
    <div class="row">
      <h3 class="col-1 content-left"><a href="posts/<%= posts[i].id %>"><%= posts[i].titlenews %></a></h3>
    </div>
      <p class="content-justify"><%- posts[i].short_content %></p>
  </div>
<%}%>
<% if(pager.hasPagination()){%> 
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <% if(pager.hasPrevios()){%> 
      <li class="page-item"><a class="page-link" href="<%=pager.previos()%>">Previous</a></li>
      <%}%>
      <% for(let i = 0, ps = pager.pages(); i < ps.length;i++) {%>   
      <li class="page-item"><a class="page-link" href="<%=ps[i]['href']%>"><%= ps[i]['text']%></a></li>
      <%}%>
      <% if(pager.hasNext()){%>
      <li class="page-item"><a class="page-link" href="<%= pager.next()%>">Next</a></li>
      <%}%>
    </ul>
  </nav>
 
<%}%>