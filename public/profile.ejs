<!DOCTYPE html>
<html>
<%- include('./head')%>

  <body>
    <%- include('./nav') %>

      <div class="container text-center">
        <div class="row mt-3 ">
          <div class="col-8">
            <div class="row">
              <div class="col-4">
                <div>
                  <img
                    src="https://ichef.bbci.co.uk/news/800/cpsprodpb/475B/production/_98776281_gettyimages-521697453.jpg"
                    class="img-thumbnail" alt="...">
                </div>
                <div>
                  <hr class="bg-danger border-2 border-top border-danger">
                </div>
                <div>
                  <p class="text-secondary text-start"> Bootstrap heading</p>
                  <hr class="bg-danger border-2 border-top border-danger">
                </div>
                <div>
                  <p class="text-secondary text-start "> Bootstrap heading</p>
                  <hr class="bg-danger border-2 border-top border-danger">
                </div>
                <div>
                  <p class="text-secondary text-start"> Bootstrap heading</p>
                  <hr class="bg-danger border-2 border-top border-danger">
                </div>
              </div>
              <div class="col-8">
                <div>
                  <p class="text-start text-primary h4">
                    <%=user.username%>
                  </p>
                </div>
                <div>
                  <p class="mt-3 text-start text-info h6">Posts: <%=count%>
                  </p>
                </div>
                <div>
                  <table class="table">
                    <tbody>
                      <tr>
                        <td> 
                          <p class="text-start mb-0">Email:</p>
                        </td>
                        <td>
                          <p class="text-start mb-0"><%= user.email%></p>
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <%if(!isme){ %>
                            <p class="text-start mb-0">About me:</p>
                            <%}%>
                        </td>
                        <td>
                          <%if(!isme){ %>
                            <p class="text-start text-success mb-0"><%=user.biography%></p>
                          <%}else{%>
                              <textarea class="form-control" id="information"
                                aria-label="With textarea"><%=user.biography%></textarea>
                              <button type="button" id="save" class="mt-2 float-start btn btn-success">Save</button>
                              <%}%>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%if(isme){%>
        <script>
          let save = document.querySelector('#save')
          let infa = document.querySelector('#information')

          save.onclick = function () {
            axios.post('/profile', {
              biography: infa.value

            })
              .then((response) => {
                let toastlive = document.querySelector('#liveToast')

                const toast = new bootstrap.Toast(toastlive)

                toast.show()
              })
          }
        </script>
        <%}%>


  </body>

</html>